---
import Author from "./Author.astro"
export interface Props {
  title: string
  author: string
  publishDate: string
  heroImage: string
  alt: string
}
const { title, author, publishDate, heroImage, alt } = Astro.props
---

<head> </head>
<div class="layout">
  <article class="content">
    <div>
      <header class="flex flex-col text-center items-center justify-center pb-8 mb-8">
        {
          heroImage && (
            <img
              width="720"
              height="420"
              class="mt-0 mb-8 w-[100vw] max-w-7xl object-cover object-center md:mt-8 md:mb-16 md:h-64"
              loading="lazy"
              src={heroImage}
              {alt}
            />
          )
        }
        <p class="publish-date">{publishDate}</p>
        <h1 class="title">{title}</h1>
        <Author name="@mikelxk" href="https://github.com/mikelxk" />
      </header>
      <main>
        <slot />
      </main>
    </div>
  </article>
</div>

<style>
  .content {
    margin-bottom: 8rem;
  }

  .content :global(main > * + *) {
    margin-top: 1rem;
  }

  .content :global(h2) {
    margin-top: 4rem;
  }

  header {
    border-bottom: 4px solid var(--theme-divider);
  }

  .title,
  .author,
  .publish-date {
    margin: 0;
  }

  .publish-date,
  .author {
    color: var(--theme-text-lighter);
  }

  .title {
    font-size: 2.25rem;
    font-weight: 700;
  }
</style>
