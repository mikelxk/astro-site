---
export interface Props {
  post: any;
}

const { post } = Astro.props;
---

<article class="post-preview pb-8 mb-8">
  <header class="items-start flex flex-col justify-center text-left pb-8">
    <p class="publish-date m-0">{post.frontmatter.publishDate}</p>
    <a href={post.url}><h1 class="title m-0">{post.frontmatter.title}</h1></a>
  </header>
  <p>{post.frontmatter.description}</p>
  <a class="text-[#92a8d1]" href={post.url}>Read more</a>
</article>

<style>
  .content :global(main > * + *) {
    margin-top: 1rem;
  }

  .post-preview {
    border-bottom: 4px solid var(--theme-divider);
  }

  .title,
  .author,
  .publish-date {
    margin: 0;
  }

  .publish-date,
  .author {
    font-size: 1.25rem;
  }

  .title {
    font-size: 2.25rem;
    font-weight: 700;
  }
</style>
