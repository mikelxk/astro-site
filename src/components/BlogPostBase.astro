---
interface Props {
  title: string
  author: string
  publishDate: string
  heroImage: string
  alt: string
}
const { title, author, publishDate, heroImage, alt } = Astro.props
---

<div class="layout">
  <article class="content mb-32">
    <div>
      <header
        class="mb-8 flex flex-col items-center justify-center border-b border-gray-200 dark:border-gray-900 pb-8 text-center"
      >
        {
          heroImage && (
            <img
              width="720"
              height="420"
              class="mt-0 mb-8 w-[100vw] max-w-7xl object-cover object-center md:mt-8 md:mb-16 md:h-64"
              loading="lazy"
              src={heroImage}
              {alt}
            />
          )
        }
        <p
          class="text-base font-medium leading-6 text-gray-500 dark:text-gray-300"
        >
          {
            new Date(publishDate).toLocaleDateString("en-US", {
              day: "numeric",
              month: "short",
              year: "numeric",
            })
          }
        </p>
        <h1
          class="md:leading-14 m-0 bg-clip-text text-3xl font-extrabold leading-9 tracking-tight text-gray-900 dark:text-gray-100 sm:text-4xl sm:leading-10 md:text-5xl"
        >
          {title}
        </h1>
      </header>
      <main>
        <slot />
      </main>
    </div>
    <script
      is:inline
      data-cfasync="false"
      src="https://giscus.app/client.js"
      data-repo="mikelxk/astro-site"
      data-repoId="R_kgDOHVQQMA"
      data-category="General"
      data-category-id="DIC_kwDOHVQQMM4Ch6M6"
      data-mapping="pathname"
      data-strict="0"
      data-reactions-enabled="1"
      data-emit-metadata="0"
      data-input-position="bottom"
      data-theme="preferred_color_scheme"
      data-lang="en"
      crossorigin="anonymous"
      async></script>
  </article>
</div>
