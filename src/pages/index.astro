---
// Component Imports
import Elaina from "/Elaina.webp";
import Badges from "../components/Badges.astro";
import BaseHead from "../components/BaseHead.astro";
// Component Script:
// You can write any JavaScript/TypeScript that you'd like here.
// It will run during the build, but never in the browser.
// All variables are available to use in the HTML template below.
let title = "Home | Mike.Lxk";
let description = "The perfect starter for your perfect blog.";
let permalink = "https://mikelxk.com/";

// Data Fetching: List all Markdown posts in the repo.

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---

<html lang="en">
  <head>
  <BaseHead {title} {description} {permalink} />
  </head>
  <body>
    <div
      class="mx-auto max-w-screen-md px-4 sm:px-6 md:px-8 my-12 sm:my-20 md:my-32"
    >
      <div class="flex flex-col sm:flex-row">
        <img
          class="w-24 h-24 md:w-32 md:h-32 rounded-full"
          src={Elaina}
          alt="avatar"
        />
        <div class="mt-8 sm:mt-0 sm:ml-8 flex flex-col justify-center">
          <p class="text-2xl md:text-3xl leading-tight">Hi, I'm</p>
          <h1 class="leading-tight font-semibold text-4xl md:text-5xl">Mike</h1>
        </div>
      </div>
      <p class="mt-10 text-lg leading-7">
        I'm currently a CS undergrad at UF. Interested in C++ and Javascript.
      </p>
      <Badges />
    </div>
  </body>
</html>
